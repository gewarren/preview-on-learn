{
  "manifest_version": 3,
  "name": "Preview on Learn",
  "version": "1.0.0",
  "description": "Adds a direct link on each file in a GitHub pull request to preview the file on learn.microsoft.com.",
  "permissions": [
    "storage",
    "identity",
    "tabs"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "icons": {
    "128": "images/icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "dist/content.bundle.js"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "oauth2": {
    "client_id": "your_github_client_id",
    "scopes": [
      "repo"
    ]
  }
}
